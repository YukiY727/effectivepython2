{
    "name": "Python 3.11 with Poetry",
    "image": "effective_python",
    // "build": {
    //     "dockerfile": "../Dockerfile"
    // },


    // Uncomment the next line to run commands after the container is created.
    // "postCreateCommand": "echo 'Post create command running'",
    // Uncomment the next line to use the VS Code Remote - Containers extension during development.
    // "extensions": ["ms-python.python"],

    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],

    // Uncomment the next line to start a second service in the container.
    // "appPort": [],
    "service": "app",
    
    "workspaceFolder": "/effective_python_docker",
    // mount all code into the container
    "mounts": [
        "source=${localWorkspaceFolder}/effective_python_2nd_edition,target=/effective_python_docker/effective_python_2nd_edition,type=bind,consistency=cached"
    ],
    
    
    "extensions":[
		"GitHub.copilot",
		"streetsidesoftware.code-spell-checker",
		"dbaeumer.vscode-eslint",
		"ms-python.python",
		"christian-kohler.path-intellisense",
		"littlefoxteam.vscode-python-test-adapter",
		"KevinRose.vsc-python-indent",
		"TabNine.tabnine-vscode",
		"VisualStudioExptTeam.vscodeintellicode"
	],
    "settings": {
            "python.testing.pytestPath": "/root/.cache/pypoetry/virtualenvs/effective-python-JdnyPkz3-py3.11/bin/pytest",
            "python.pythonPath": "/root/.cache/pypoetry/virtualenvs/effective-python-JdnyPkz3-py3.11/bin/python",
            "python.linting.pylintEnabled": false,
            "python.linting.flake8Enabled": true,
            "python.formatting.provider": "black",
            "python.formatting.blackArgs": ["--line-length", "120"],
            "python.testing.pytestEnabled": true,
        },
    "containerEnv": {
        "PYTHONPATH": "/root/.cache/pypoetry/virtualenvs/effective-python-JdnyPkz3-py3.11/bin/python"
    }
    //     "terminal.integrated.shell.linux": "/bin/bash"
}
